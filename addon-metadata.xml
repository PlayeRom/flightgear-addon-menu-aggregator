<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on metadata</file-type>
        <format-version type="int">1</format-version>
    </meta>

    <addon>
        <!-- TODO: change the identifier to your own unique name throughout the project. -->
        <identifier type="string">org.flightgear.addons.MenuAggregator</identifier>
        <name type="string">Add-ons Menu Aggregator</name>
        <version type="string">1.0.0</version>

        <authors>
            <author>
                <name type="string">Roman Ludwicki</name>
                <email type="string"></email>
                <url type="string"></url>
            </author>
        </authors>

        <maintainers>
            <maintainer>
                <name type="string">Roman Ludwicki</name>
                <url type="string">https://github.com/PlayeRom/flightgear-addon-menu-aggregator/</url>
            </maintainer>
        </maintainers>

        <short-description type="string">
            This add-on aggregates the menus of all other add-ons into one menu item.
        </short-description>

        <long-description type="string">
            This add-on aggregates the menus of all other add-ons into one menu item. This will keep your menu from being too large and allow you to retain access to all add-on features.
        </long-description>

        <license>
            <designation type="string">GNU GPL version 3 or later</designation>
            <file type="string">LICENSE</file>
            <url type="string">https://www.gnu.org/licenses/gpl-3.0.html</url>
        </license>

        <min-FG-version type="string">2024.1.1</min-FG-version>
        <max-FG-version type="string">none</max-FG-version>

        <urls>
            <home-page type="string">https://github.com/PlayeRom/flightgear-addon-menu-aggregator/</home-page>
            <download type="string">https://github.com/PlayeRom/flightgear-addon-menu-aggregator/releases/latest/</download>
            <support type="string">https://github.com/PlayeRom/flightgear-addon-menu-aggregator/issues/</support>
            <code-repository type="string">https://github.com/PlayeRom/flightgear-addon-menu-aggregator/</code-repository>
        </urls>

        <tags>
            <tag type="string">add-ons</tag>
            <tag type="string">menu</tag>
            <tag type="string">aggregator</tag>
            <tag type="string">canvas</tag>
            <tag type="string">gui</tag>
        </tags>

        <localized>
            <pl>
                <short-description type="string">
                    Ten dodatek łączy menu wszystkich innych dodatków w jedną pozycję menu.
                </short-description>

                <long-description type="string">
                    Ten dodatek agreguje menu wszystkich innych dodatków w jedną pozycję menu. Dzięki temu Twoje menu nie będzie zbyt rozległe i zachowasz dostęp do wszystkich funkcji dodatku.
                </long-description>
            </pl>
        </localized>
    </addon>
</PropertyList>
